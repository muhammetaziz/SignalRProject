@model List<SignalR.WebUI.DTOs.ProductDtos.ResultProductWithCategoryDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid">
    <h4 class="page-title">Ürün Modülü</h4>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">
                        Ürün Listesi 
                        <a href="/Product/CreateProduct/" class="btn btn-success btn-sm float-right" title="Sil"> <i class="fa-sharp fa-solid fa-plus"></i>  Yeni</a>
                    </div>
                </div>
                <div class="card-body">
                    <table class="table table-head-bg-primary mt-4 table-bordered">
                        <thead>
                            <tr>
                                <th scope="col">Id</th>
                                <th scope="col">Görsel</th>
                                <th scope="col">Ürün</th>
                                <th scope="col">Kategori</th>
                                <th scope="col">Açıklama</th>
                                <th scope="col">Fiyat</th>
                                <th scope="col">Durum</th>
                                <th width="8%" scope="col">Seçenekler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">@item.ProductID</th>
                                    <td><img src="@item.ImageURL" /></td>
                                    <td>@item.ProductName</td>
                                    <td>@item.CategoryName</td>
                                    <td>@item.Description</td>
                                    <td>@item.Price .00</td>
                                    <td>@(item.ProductStatus ? "Aktif" : "Pasif")</td>
                                    <td>
                                        <a href="/Product/UpdateProduct/@item.ProductID"
                                           class="btn btn-warning btn-sm" title="Düzenle">
                                            <i class="fa-solid fa-pen"></i>
                                        </a>

                                        <a href="/Product/UpdateProduct/@item.ProductID"
                                           class="btn btn-info btn-sm" title="Detaylar">
                                            <i class="fa-solid fa-eye"></i>
                                        </a>

                                        <a href="/Product/DeleteProduct/@item.ProductID"
                                           class="btn btn-danger btn-sm" title="Sil">
                                            <i class="fa-solid fa-trash-can"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>