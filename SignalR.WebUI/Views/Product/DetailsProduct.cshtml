@model SignalR.WebUI.DTOs.ProductDtos.GetProductDto

@{
    ViewData["Title"] = "DetailsProduct";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

@if (Model != null)
{
    <div class="container-fluid">
        <h4 class="page-title">Ürün Detayları</h4>
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-lg border-0 rounded">
                    <img src="@Model.ImageURL" class="card-img-top rounded-top" alt="Product Image">
                    <div class="card-body">
                        <h5 class="card-title text-center"><i class="fas fa-box"></i> @Model.ProductName</h5>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">
                                <strong>Kategori:</strong> @Model.CategoryName
                            </li>
                            <li class="list-group-item">
                                <strong>Fiyat:</strong> @Model.Price .00 ₺
                            </li>
                            <li class="list-group-item">
                                <strong>Açıklama:</strong> @Model.Description
                            </li>
                            <li class="list-group-item">
                                <strong>Durum:</strong> @(Model.ProductStatus ? "Aktif" : "Pasif")
                            </li>
                        </ul>
                    </div>
                    <div class="card-footer text-center">
                        <a href="/Product/UpdateProduct/@Model.ProductID" class="btn btn-warning">
                            <i class="fas fa-pen"></i> Düzenle
                        </a>
                        <a href="/Product/DeleteProduct/@Model.ProductID" class="btn btn-danger">
                            <i class="fas fa-trash-alt"></i> Sil
                        </a>
                        <a href="/Product" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Geri
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <p>Ürün bilgisi yüklenemedi.</p>
}
