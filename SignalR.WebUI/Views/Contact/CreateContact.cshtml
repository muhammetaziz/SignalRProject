@model SignalR.WebUI.DTOs.ContactDtos.CreateContactDto
@{
    ViewData["Title"] = "CreateContact";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <form method="post">

            <div class="card">
                <div class="card-header">
                    <div class="card-title">İletişim ekle</div>
                </div>
                <div class="card-body">  
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input asp-for="ContactEmail" type="text" class="form-control" placeholder="Email">
                        <small id="emailHelp" class="form-text text-muted"></small>
                    </div>
                    <div class="form-group">
                        <label for="email">Telefon</label>
                        <input asp-for="Phone" type="tel" class="form-control" placeholder="Email">
                        <small id="emailHelp" class="form-text text-muted"></small>
                    </div>
                    <div class="form-group">
                        <label for="email">Konum</label>
                        <input asp-for="Location" type="text" class="form-control" placeholder="Konum">
                        <small id="emailHelp" class="form-text text-muted"></small>
                    </div>
                    <div class="form-group">
                        <label for="email">Açıklama</label>
                        <textarea asp-for="FooterDescription" type="text" class="form-control" placeholder="Açıklama"></textarea>
                        <small id="emailHelp" class="form-text text-muted"></small>
                    </div>

                </div>
                <div class="card-action">
                    <button type="submit" class="btn btn-success">Ekle</button>
                    <a href="/Contact/Index/10" class="btn btn-danger">İptal</a>
                </div>
            </div>
        </form>
    </div>
</div>