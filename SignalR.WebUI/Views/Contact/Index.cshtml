@model SignalR.WebUI.DTOs.ContactDtos.ResultContactDto
@{
    ViewData["Title"] = "İletişim";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
 

<div class="container-fluid">
    <h4 class="page-title">İletişim Modülü</h4>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded">
                <div class="card-header bg-primary text-white text-center"> 
                    <h5 class="mb-0"><i class="fas fa-address-book"></i> İletişim Bilgileri</h5>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li hidden class="list-group-item">
                            <i class="fas fa-user"></i> <strong>Ad:</strong> @Model.ContactID
                        </li>
                        <li class="list-group-item">
                            <i class="fas fa-envelope"></i> <strong>Email:</strong> @Model.ContactEmail
                        </li>
                        <li class="list-group-item">
                            <i class="fas fa-phone"></i> <strong>Telefon:</strong> @Model.Phone
                        </li>
                        <li class="list-group-item">
                            <i class="fas fa-info-circle"></i> <strong>Açıklama:</strong> @Model.FooterDescription
                        </li>
                        <li class="list-group-item">
                            <i class="fas fa-map-marker-alt"></i> <strong>Konum:</strong> @Model.Location
                        </li>
                    </ul>
                </div>
                <div class="card-footer text-center">
                    <a href="/Contact/UpdateContact/2" class="btn btn-warning">
                        <i class="fas fa-pen"></i> Düzenle
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
