@model List<SignalR.WebUI.DTOs.ContactDtos.ResultContactDto>
@{
    ViewData["Title"] = "İletişim";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid">
    <h4 class="page-title">İletişim Modülü</h4>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">
                        İletişim Listesi
                        <a href="/Contact/CreateContact/" class="btn btn-success btn-sm float-right" title="Sil"> <i class="fa-sharp fa-solid fa-plus"></i>  Yeni</a>
                    </div>
                </div>
                <div class="card-body">
                    <table class="table table-head-bg-primary mt-4 table-bordered">
                        <thead>
                            <tr>
                                <th scope="col">Id</th>
                                <th scope="col">Email</th>
                                <th scope="col">Footer Açıklama</th>
                                <th scope="col">Telefon</th>
                                <th scope="col">Lokasyon</th>
                                <th width="8%" scope="col">Seçenekler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">@item.ContactID</th>
                                    <td> @item.ContactEmail"  </td>
                                    <td>@item.FooterDescription</td>
                                    <td>@item.Phone</td>
                                    <td>@item.Location</td>
                                    <td>
                                        <a href="/Contact/UpdateContact/@item.ContactID"
                                           class="btn btn-warning btn-sm" title="Düzenle">
                                            <i class="fa-solid fa-pen"></i>
                                        </a>

                                         

                                        <a href="/Contact/DeleteContact/@item.ContactID"
                                           class="btn btn-danger btn-sm" title="Sil">
                                            <i class="fa-solid fa-trash-can"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

