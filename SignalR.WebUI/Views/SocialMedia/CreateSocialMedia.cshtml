@model SignalR.WebUI.DTOs.SocialMediaDtos.CreateSocialMediaDto
@{
    ViewData["Title"] = "CreateSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">Yeni Sosyal Medya Ekle</div>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label for="email">Başlık</label>
                        <input asp-for="Title" type="text" class="form-control" placeholder="Başlık">
                        <small id="emailHelp" class="form-text text-muted"></small>
                    </div>
                    <div class="form-group">
                        <label for="email">URL</label>
                        <input asp-for="URL" type="text" class="form-control" placeholder="URL">
                        <small id="emailHelp" class="form-text text-muted"></small>
                    </div>
                    <div class="form-group">
                        <label for="email">Icon</label>
                        <input asp-for="Icon" type="text" class="form-control" placeholder="Icon">
                        <small id="emailHelp" class="form-text text-muted"></small>
                    </div>
                     
                </div>
                <div class="card-action">
                    <button type="submit" class="btn btn-success">Ekle</button>
                    <button asp-action="Index" class="btn btn-danger">İptal</button>
                </div>
            </div>
        </form>
    </div>
</div>
