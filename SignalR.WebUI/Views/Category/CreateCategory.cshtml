@model SignalR.WebUI.DTOs.CategoryDtos.CreateCategoryDto
@{
    ViewData["Title"] = "CreateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <form method="post">


        <div class="card">
            <div class="card-header">
                <div class="card-title">Yeni Kategori Ekle</div>
            </div>
            <div class="card-body">

                <div class="form-group">
                    <label for="email">Kategori Adı</label>
                    <input asp-for="Name" type="text" class="form-control"  placeholder="Kategori adı">
                    <small id="emailHelp" class="form-text text-muted"></small>
                </div> 
                <div class="form-check">
                    <label class="form-check-label">
                        <input asp-for="Status" class="form-check-input" type="checkbox">
                        <span class="form-check-sign">Kategori durumu Aktif/Pasif</span>
                    </label>
                </div>
            </div>
            <div class="card-action">
                <button type="submit" class="btn btn-success">Ekle</button>
                <button asp-action="Index" class="btn btn-danger">İptal</button>
            </div>
        </div>
        </form>
    </div> 
</div>

