@model SignalR.WebUI.DTOs.FeatureDtos.ResultFeatureDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="container-fluid">
    <h4 class="page-title">Özellikler</h4>
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded">

                <img src="@Model.ImageURL" class="card-img-top rounded-top" alt="Feature Image">

                <div class="card-body">
                    <h5 class="card-title text-center"><i class="fas fa-star"></i> Özellikler</h5>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <strong>@Model.Title1</strong>
                            <p class="text-muted mb-0">@Model.Description1</p>
                        </li>
                        <li class="list-group-item">
                            <strong>@Model.Title2</strong>
                            <p class="text-muted mb-0">@Model.Description2</p>
                        </li>
                        <li class="list-group-item">
                            <strong>@Model.Title3</strong>
                            <p class="text-muted mb-0">@Model.Description3</p>
                        </li>
                    </ul>
                </div>
                <div class="card-footer text-center">
                    <a href="/Feature/UpdateFeature/@Model.FeatureID" class="btn btn-warning">
                        <i class="fas fa-pen"></i> Düzenle
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>